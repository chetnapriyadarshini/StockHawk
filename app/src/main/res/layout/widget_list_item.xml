<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:id="@+id/item_stock"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
  <TextView
      android:id="@+id/stock_symbol"
      style="@style/StockSymbolTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="start|center_vertical"
      tools:text="GOOG"
      />
  <LinearLayout
      android:layout_width="0dp"
      android:id="@+id/stock_layout"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="end"
      >
    <TextView
        android:id="@+id/bid_price"
        style="@style/BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/price_padding"
        android:paddingEnd="@dimen/price_padding"
        android:paddingLeft="@dimen/price_padding"
        tools:text="1000.00"
        />
    <TextView
        android:id="@+id/change_pos"
        android:background="@drawable/percent_change_pill"
        style="@style/PercentChangeTextStyle"
        android:backgroundTint="@color/material_green_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/percent_change_padding"
        android:paddingRight="@dimen/percent_change_padding"
        android:paddingEnd="@dimen/percent_change_padding"
        tools:text="100%"
        />

    <TextView
        android:id="@+id/change_neg"
        android:background="@drawable/percent_change_pill"
        style="@style/PercentChangeTextStyle"
        android:backgroundTint="@color/material_red_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/percent_change_padding"
        android:paddingRight="@dimen/percent_change_padding"
        android:paddingEnd="@dimen/percent_change_padding"
        tools:text="100%"
        />
  </LinearLayout>
</LinearLayout>